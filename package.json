{
  "name": "mabar",
  "version": "2.0.0-beta",
  "description": "MaBar - Smart Padel Matchmaking Platform",
  "private": true,
  "scripts": {
    "install": "npm install --prefix frontend && npm install --prefix backend",
    "dev": "concurrently \"npm run dev --prefix backend\" \"npm run dev --prefix frontend\"",
    "start": "npm start --prefix backend",
    "build": "npm run build --prefix frontend",
    "build:prod": "NODE_ENV=production npm run build --prefix frontend",
    "start:prod": "NODE_ENV=production npm start --prefix backend",
    "test": "npm test --prefix backend && npm test --prefix frontend",
    "lint": "npm run lint --prefix frontend && npm run lint --prefix backend",
    "lint:fix": "npm run lint:fix --prefix frontend && npm run lint:fix --prefix backend",
    "format": "npm run format --prefix frontend && npm run format --prefix backend",
    "format:check": "npm run format:check --prefix frontend && npm run format:check --prefix backend",
    "db:setup": "node scripts/setup-db.js",
    "generate-secrets": "node scripts/generate-secure-secrets.js",
    "audit": "npm audit",
    "security:audit": "npm audit --prefix backend && npm audit --prefix frontend && node scripts/security-audit.js",
    "security:fix": "npm audit fix --prefix backend && npm audit fix --prefix frontend",
    "security:generate-secrets": "node scripts/generate-secure-secrets.js",
    "portfolio:demo": "echo 'Starting MaBar Portfolio Demo...' && npm run build:prod && concurrently \"npm run start:prod\" \"npm run dev --prefix frontend\"",
    "task:list": "npx task-master-ai get-tasks --project-root=.",
    "task:next": "npx task-master-ai next-task --project-root=.",
    "task:show": "npx task-master-ai get-task --project-root=. --id",
    "task:done": "npx task-master-ai set-task-status --project-root=. --status=done --id",
    "task:add": "npx task-master-ai add-task --project-root=. --research",
    "task:expand": "npx task-master-ai expand-task --project-root=. --research --id",
    "task:analyze": "npx task-master-ai analyze-project-complexity --project-root=. --research",
    "task:report": "npx task-master-ai complexity-report --project-root=.",
    "task:status": "npx task-master-ai set-task-status --project-root=. --id",
    "task:update": "npx task-master-ai update-task --project-root=. --id",
    "task:update-subtask": "npx task-master-ai update-subtask --project-root=. --id",
    "task:generate": "npx task-master-ai generate --project-root=.",
    "task:validate": "npx task-master-ai validate-dependencies --project-root=.",
    "task:config": "npx task-master-ai models --project-root=."
  },
  "keywords": [
    "padel",
    "matchmaking",
    "booking",
    "pwa",
    "react",
    "nodejs",
    "rust",
    "mongodb",
    "ai",
    "task-management"
  ],
  "author": "MaBar Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/mabar.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/mabar/issues"
  },
  "homepage": "https://github.com/your-org/mabar#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "concurrently": "^9.2.0"
  },
  "workspaces": [
    "frontend",
    "backend"
  ],
  "dependencies": {
    "dotenv": "^17.2.1",
    "mongoose": "^8.18.0",
    "parse": "^3.5.1"
  }
}
